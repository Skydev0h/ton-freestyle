tuple PackStorage (int min_grams, int max_grams, int min_accepted,
		           int collect_deadline, int release_locktime, int release_deadline,
			       int Flags, cell investors, cell beneficiaries,
			       int ext_controller, int controller_wc, int controller_addr,
			       int beneficiary_wc, int beneficiary_addr) asm "14 TUPLE";
				   
(int, int, int, int, int, int, int, cell, cell, int, int, int, int, int) UnpackStorage(tuple data) asm "14 UNTUPLE";
				   
int [min_grams](tuple data)        asm "0 INDEX";
int [max_grams](tuple data)        asm "1 INDEX";
int [min_accepted](tuple data)     asm "2 INDEX";
int [collect_deadline](tuple data) asm "3 INDEX";
int [release_locktime](tuple data) asm "4 INDEX";
int [release_deadline](tuple data) asm "5 INDEX";
int [flags_pack](tuple data)       asm "6 INDEX";
cell [investors](tuple data)       asm "7 INDEX";
cell [beneficiaries](tuple data)   asm "8 INDEX";
int [ext_controller](tuple data)   asm "9 INDEX";
int [controller_wc](tuple data)    asm "10 INDEX";
int [controller_addr](tuple data)  asm "11 INDEX";
int [beneficiary_wc](tuple data)   asm "12 INDEX";
int [beneficiary_addr](tuple data) asm "13 INDEX";

(tuple, ()) ~[flags_pack=](tuple data, int flags) asm "6 SETINDEX";
(tuple, ()) ~[investors=](tuple data, cell invs) asm "7 SETINDEX";
(tuple, ()) ~[beneficiaries=](tuple data, cell bens) asm "8 SETINDEX";

